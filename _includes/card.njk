<!-- _includes/card.njk -->
<article class="card">
  <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
  {% if item.data.thumbnail %}
    <img src="{{ item.data.thumbnail }}" alt="{{ item.data.title }}">
  {% endif %}
  {% if item.data.excerpt %}
    <p>{{ item.data.excerpt }}</p>
  {% endif %}
</article>