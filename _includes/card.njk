<!-- _includes/card.njk -->
<a class="card" href="{{ item.url }}">
   <figure class="card-figure">
      <img src="{{ item.data.thumbnail }}" alt="{{ item.data.title + item.data.excerpt }}">
    </figure>
    <p>
      <strong>{{ item.data.title }}</strong>
      {{ item.data.excerpt | safe }}
    </p>
</a>